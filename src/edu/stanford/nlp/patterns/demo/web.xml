<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>SPIED Server</display-name>
  <description>
    The backend servlet for the SPIED (Stanford Pattern-based IE) demo.
  </description>

  <servlet>
    <servlet-name>spied</servlet-name>
    <servlet-class>edu.stanford.nlp.patterns.SPIEDServlet</servlet-class>
    <!-- Load this servlet at server startup time -->
    <load-on-startup>5</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>spied</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>    <!-- 30 minutes -->
  </session-config>
</web-app>